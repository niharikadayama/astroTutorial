---
import Main from "../layouts/Main.astro";
import Cards from "../components/Cards.astro";
const bgImage = "https://images.pexels.com/photos/5717051/pexels-photo-5717051.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2";

//Astro.glob
const blogs = await Astro.glob<{
  poster: string;
  title: string;
  subtitle: string;
}>("../pages/blogs/*.md");
---

<Main title="Niharika Dayama">
	<div class="mainContainer">
		<img class="profilePicture" width="100" height="100" alt="scenery" src={bgImage}/>
		<div class="profileInfo">
			<h1>Niharika Dayama</h1>
			<h2>Managing Director</h2>
			<p>Leading and overseeing the overall operations and business strategy of an organization</p>
		</div>
	</div>
  <Cards
    cards={[
      {
        title: "Here are my guiding philosophies for life",
        gradientFrom: "#818cf8",
        gradientTo: "#d8b4fe",
        to: "/philosophies",
      },
      {
        title: "A summary of my work history",
        gradientFrom: "#fde68a",
        gradientTo: "#fca5a5",
        to: "/work-summary",
      },
      {
        title: "What I do beyond technology",
        gradientFrom: "#6ee7b7",
        gradientTo: "#9333ea",
        to: "/beyond-tech",
      },
    ]}
  />

  <div class="featured-blogs">
    <h3 class="featured-blogs__title">Featured Blogs</h3>
    <p class="featured-blogs__description">
      Opinion pieces that will change eveything you know about web development.
    </p>
  </div>

  <ol>
    {
      blogs.map((blog) => (
        <li class="blogs__list">
          <a href={blog.url} class="blog__link">
            {blog.frontmatter.title}
          </a>
        </li>
      ))
    }
  </ol>

</Main>	

<style>
  .mainContainer{
   display: flex;
   align-items: flex-start;
   flex-wrap: wrap;
   padding: 1rem 0 3rem 0;
  }
  .profilePicture{
    border-radius: 50%;
    align-self: center;
  }
  .profileInfo{
   margin-left: 12px;
  }
  .featured-blogs {
    margin: 0;
    padding: 3rem 0 0 0;
  }
  .featured-blogs__title {
    font-size: 2rem;
    color: var(--grey-900);
  }

  .featured-blogs__description {
    margin-top: -1.2rem;
  }

  .blogs {
    font-size: 1rem;
    font-weight: 500;
  }

  .blogs__list {
    border-bottom: 1px solid; 
    border-color: var(--grey-200);
  }

  .blog__link {
    opacity: 1;
    height: 100%;
    display: block;
    padding: 1rem 0;
    color: var(--grey-200);
    text-decoration: none;
    transition: opacity 0.2s ease-in-out;
  }

  .blog__link:hover {
    opacity: 0.7;
  }
</style>
